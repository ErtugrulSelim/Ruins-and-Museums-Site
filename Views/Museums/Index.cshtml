@model IEnumerable<RuinsandMuseums.Models.Museum>
@{
    ViewData["Title"] = "All Museums";
}

<div class="container mt-4">
    <h2 class="mb-4">All Museums</h2>
    <div class="row">
        @foreach (var museum in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(museum.ImagePath))
                    {
                        <img src="@museum.ImagePath" class="card-img-top" alt="@museum.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/img/default-museum.jpg" class="card-img-top" alt="Default Museum Image" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@museum.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@museum.Location</h6>
                        <p class="card-text">@museum.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 