@model RuinsandMuseums.Models.User
@{
    ViewData["Title"] = ViewData["Title"] ?? "Delete User";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="alert alert-danger">
        Are you sure you want to delete this user?
    </div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@(Model.IsAdmin ? "Administrator" : "User")</dd>
    </dl>
    <form asp-action="DeleteUser" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div> 