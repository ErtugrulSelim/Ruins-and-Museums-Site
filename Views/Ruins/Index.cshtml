@model IEnumerable<RuinsandMuseums.Models.Ruin>
@{
    ViewData["Title"] = "All Ruins";
}

<div class="container mt-4">
    <h2 class="mb-4">All Ruins</h2>
    <div class="row">
        @foreach (var ruin in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(ruin.ImagePath))
                    {
                        <img src="@ruin.ImagePath" class="card-img-top" alt="@ruin.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/img/default-ruin.jpg" class="card-img-top" alt="Default Ruin Image" style="height: 200px; object-fit: cover;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@ruin.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@ruin.Location</h6>
                        <p class="card-text">@ruin.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 